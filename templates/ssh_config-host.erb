Host <%= @name %>
<% if @log_level -%>
  LogLevel <%= @log_level.upcase %>
<% end -%>
<%-
    @valid_keywords.map do |key|
      next if scope[key.downcase] == :undef
      next if scope[key.downcase] == nil

      if @space_separated_keywords.include? key
        value = Array(scope[key.downcase]).join(' ')
      else
        value = Array(scope[key.downcase]).join(',')
      end
-%>
  <%= [key,value].join(' ') %>
<%-
  end
-%>
